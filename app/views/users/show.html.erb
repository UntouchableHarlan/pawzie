<br>
<div class="container" style="padding-left: 25%;">
  <div class="col-lg-12">
    <%= image_tag @user.image.url(:medium), class: "img-responsive img-center", id: 'user-id-pic' %>
  </div>
  <br>
  <div class="row">
    <% if current_user.id == @user.id %>
    <div class="col-md-6">
      <h5> <i class="fa fa-cog" aria-hidden="true"></i> <%= link_to "Edit Profile", edit_user_path %> </h5>
    </div>
    <% else %>
    <div class="col-md-6">
      <h5> <i class="fa fa-envelope fa-lg" aria-hidden="true"></i> <%= link_to "Direct Message", '' %> </h5>
    </div>
    <% end %>
    <div class="col-md-12" id="pet-thingy">
      <h1>Pets <i class="fa fa-paw" aria-hidden="true"></i> </h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <% @pets.each_with_index do |pet, num| %>
    <div class="col-md-4" id="insta-pet">
      <%= image_tag pet.image.url(:medium), class: "img-responsive img-center", id: 'user-pet-pic', data: { toggle: "lightbox" } %>
      <p id="pet-name"><%= link_to "#{pet.name}", user_pet_path(@user) %></p>
    </div>
    <% end %>
  </div>
</div>
