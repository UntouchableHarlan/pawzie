<div class="sign-up container">
  <%= bootstrap_form_for(@user, html: { multipart: true }) do |f| %>
  <%= f.file_field :image %>
  <%= f.text_field :name %>
  <%= f.text_field :username %>
  <%= f.email_field :email %>
  <div class="address" style="display: flex">
    <%= f.text_field :address, help: "We need this to locate pet owners next to you! We will not reveal this information", style: "width: 76& !important;"  %>
    <%= f.text_field :city, id: "city" %>
    <%= f.text_field :state, id: "state" %>
    <%= f.text_field :zip, id: "zip" %>
  </div>
  <%= f.password_field :password, help: "Must be at least 6 characters long" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up" %>
<% end %>
</div>
